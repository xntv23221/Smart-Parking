<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smartparking.dao.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.smartparking.domain.model.User">
        <id column="user_id" property="userId"/>
        <result column="username" property="username"/>
        <result column="password_hash" property="passwordHash"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="nickname" property="nickname"/>
        <result column="avatar_url" property="avatarUrl"/>
        <result column="balance" property="balance"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="status" property="status"/>
    </resultMap>

    <sql id="Base_Column_List">
        user_id, username, password_hash, phone, email, nickname, avatar_url, balance, created_at, updated_at, status
    </sql>

    <select id="selectById" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from users
        where user_id = #{id}
    </select>
    
    <select id="selectByUsername" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from users
        where username = #{username}
    </select>
    
    <select id="selectByPhone" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from users
        where phone = #{phone}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="userId">
        insert into users (username, password_hash, phone, email, nickname, avatar_url, balance, created_at, updated_at, status)
        values (#{username}, #{passwordHash}, #{phone}, #{email}, #{nickname}, #{avatarUrl}, #{balance}, #{createdAt}, #{updatedAt}, #{status})
    </insert>

    <update id="update">
        update users
        <set>
            <if test="passwordHash != null">password_hash = #{passwordHash},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="email != null">email = #{email},</if>
            <if test="nickname != null">nickname = #{nickname},</if>
            <if test="avatarUrl != null">avatar_url = #{avatarUrl},</if>
            <if test="balance != null">balance = #{balance},</if>
            <if test="status != null">status = #{status},</if>
            updated_at = CURRENT_TIMESTAMP
        </set>
        where user_id = #{userId}
    </update>
    
    <delete id="deleteById">
        delete from users where user_id = #{id}
    </delete>

</mapper>
