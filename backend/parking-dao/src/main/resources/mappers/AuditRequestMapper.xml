<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smartparking.dao.mapper.AuditRequestMapper">

    <resultMap id="BaseResultMap" type="com.smartparking.domain.model.AuditRequest">
        <id column="request_id" property="requestId"/>
        <result column="user_id" property="userId"/>
        <result column="type" property="type"/>
        <result column="old_value" property="oldValue"/>
        <result column="new_value" property="newValue"/>
        <result column="status" property="status"/>
        <result column="reason" property="reason"/>
        <result column="created_at" property="createdAt"/>
        <result column="handled_at" property="handledAt"/>
        <result column="handler_id" property="handlerId"/>
    </resultMap>

    <sql id="Base_Column_List">
        request_id, user_id, type, old_value, new_value, status, reason, created_at, handled_at, handler_id
    </sql>

    <select id="selectById" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from audit_requests
        where request_id = #{id}
    </select>
    
    <select id="selectByUserId" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from audit_requests
        where user_id = #{userId}
        order by created_at desc
    </select>
    
    <select id="selectByStatus" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from audit_requests
        where status = #{status}
        order by created_at asc
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="requestId">
        insert into audit_requests (user_id, type, old_value, new_value, status, reason, created_at, handled_at, handler_id)
        values (#{userId}, #{type}, #{oldValue}, #{newValue}, #{status}, #{reason}, #{createdAt}, #{handledAt}, #{handlerId})
    </insert>

    <update id="update">
        update audit_requests
        <set>
            <if test="status != null">status = #{status},</if>
            <if test="handledAt != null">handled_at = #{handledAt},</if>
            <if test="handlerId != null">handler_id = #{handlerId},</if>
            <if test="reason != null">reason = #{reason},</if>
        </set>
        where request_id = #{requestId}
    </update>
    
    <delete id="deleteById">
        delete from audit_requests where request_id = #{id}
    </delete>

</mapper>
