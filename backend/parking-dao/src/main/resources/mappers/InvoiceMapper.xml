<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smartparking.dao.mapper.InvoiceMapper">

    <resultMap id="BaseResultMap" type="com.smartparking.domain.model.Invoice">
        <id column="invoice_id" property="invoiceId"/>
        <result column="user_id" property="userId"/>
        <result column="amount" property="amount"/>
        <result column="title" property="title"/>
        <result column="tax_no" property="taxNo"/>
        <result column="status" property="status"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <sql id="Base_Column_List">
        invoice_id, user_id, amount, title, tax_no, status, created_at
    </sql>

    <select id="selectById" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from invoices
        where invoice_id = #{id}
    </select>
    
    <select id="selectByUserId" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from invoices
        where user_id = #{userId}
        order by created_at desc
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="invoiceId">
        insert into invoices (user_id, amount, title, tax_no, status, created_at)
        values (#{userId}, #{amount}, #{title}, #{taxNo}, #{status}, #{createdAt})
    </insert>

    <update id="update">
        update invoices
        <set>
            <if test="status != null">status = #{status},</if>
        </set>
        where invoice_id = #{invoiceId}
    </update>
    
    <delete id="deleteById">
        delete from invoices where invoice_id = #{id}
    </delete>

</mapper>
